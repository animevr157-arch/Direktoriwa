function addChannel(){
  const name = document.getElementById('name').value.trim();
  const desc = document.getElementById('desc').value.trim();
  const link = document.getElementById('link').value.trim();

  if(!name || !desc || !link){
    alert('Semua field wajib diisi');
    return;
  }

  if(!link.includes('whatsapp.com/channel')){
    alert('Link WA harus valid');
    return;
  }

  // Ambil data yang sudah disubmit di localStorage
  let submittedLinks = JSON.parse(localStorage.getItem('submittedLinks') || '[]');

  // Cek apakah link ini sudah pernah dikirim
  if(submittedLinks.includes(link)){
    alert('Kamu sudah submit link ini sebelumnya!');
    return;
  }

  // Jika belum, simpan di Firebase
  db.ref('channels').push({name, desc, link});

  // Tambahkan link ke localStorage
  submittedLinks.push(link);
  localStorage.setItem('submittedLinks', JSON.stringify(submittedLinks));

  // Reset form
  document.getElementById('name').value = '';
  document.getElementById('desc').value = '';
  document.getElementById('link').value = '';
                           }
